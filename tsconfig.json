{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],

    "types": ["node"],
    "esModuleInterop": true,

    "sourceMap": true,

    "declaration": false,
    "declarationMap": false,

    "strict": true,
    "skipLibCheck": true,


    "verbatimModuleSyntax": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "moduleDetection": "force",
    "isolatedModules": true
  },
  "include": ["src"]
}
